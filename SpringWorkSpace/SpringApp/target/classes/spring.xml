<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="l1" class="in.mincraft.SpringApp.Laptop">
		<property name="lid" value="001"></property>
		<property name="make" value="HP"></property>
		<property name="cost" value="4000"></property>
		<property name="name" ref="stud"></property>
		
	</bean>
	
	<bean id="add" class="in.mindcraft.SpringApp.Address">
		<property name="city" value="Ohio"></property>
		<property name="state" value="Maharshtra"></property>
		
	</bean>
	
	<bean id="stud"  class="in.mindcraft.SpringApp.Student">
		<property name="name" value="Joel"></property>
		<property name="roll" value="1"></property>
		
	</bean>



</beans>
